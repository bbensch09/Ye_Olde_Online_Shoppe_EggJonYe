<%= form_for @address do |f| %>
  <% if @address.errors.any? %>
    <div id="error_explanation">
      <h2> <%= pluralize(@address.errors.count, "error") %> Prevented this product from being saved:</h2>
      <ul>
        <% @address.errors.full_messages.each do |msg| %>
          <li class="errors"> <%= msg %> </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :street_address, "Street Address" %> <br>
    <%= f.text_field :street_address %>
  </p>
  <p>
    <%= f.label :street_address_2, "Street Address (cont.)" %> <br>
    <%= f.text_field :street_address2 %>
  </p>
  <p>
    <%= f.label :city, "City" %> <br>
    <%= f.text_field :city %>
  </p>
  <p>
    <%= f.label :state, "State" %> <br>
    <%= f.text_field :state %>
  </p>

  <p>
    <%= f.label :zip, "Zip" %> <br>
    <%= f.text_field :zip %>
  </p>

    <%= f.submit 'Save', :class => "button" %>
  </p>

<% end %>
