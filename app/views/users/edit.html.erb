
<h1>Editing User</h1>

<%= form_for @user, method: :patch do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2> <%= pluralize(@user.errors.count, "error") %> Prevented this user from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li class="errors"> <%= msg %> </li>
        <% end %>
      </ul>
    </div>
  <% end %>

<% unless @user == current_user %>
  <div class="field">
    <%= f.label "Admin access?" %>
    <%= f.check_box :admin %>
  </div>
<% end %>

  <p>
    <%= f.submit 'Update User', :class => "button" %>
  </p>

<% end %>


<%= link_to 'Back to Users Overview', users_path %>
