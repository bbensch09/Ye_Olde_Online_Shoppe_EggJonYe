<!DOCTYPE html>
<html>
<head>
  <title>Abezon</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <%= stylesheet_link_tag    "application" %>
  <link href='http://cdnjs.cloudflare.com/ajax/libs/foundicons/3.0.0/foundation-icons.css' rel='stylesheet' type='text/css'>
  <%= javascript_include_tag "application", 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>
<body>
  <%= render 'layouts/nav' %>
  <% if flash[:notice] %>
  <center>
    <div class="alert alert-info" data-dismiss="alert" role="alert">
      <%= flash[:notice] %>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    </div>
  </center>
  <% end %>
  <% if flash[:error] %>
  <center>
    <div class="alert alert-danger" data-dismiss="alert" role="alert">
      <%= flash[:error] %>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    </div>
  </center>
  <% end %>
  <% if flash[:success] %>
  <center>
    <div class="alert alert-success" data-dismiss="alert" role="alert">
      <%= flash[:success] %>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    </div>
  </center>
  <% end %>

  <div class="container">
    <%= yield %>
  </div>
</body>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
<script src='https://cdnjs.cloudflare.com/ajax/libs/foundation/6.1.1/foundation.js'></script>

</html>
