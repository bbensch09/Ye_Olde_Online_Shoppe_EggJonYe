<h1> List of all Products</h1>
<div>
  <h2> <%= link_to 'Create New Product', new_product_path, :class => "crud-link" %></h2>
</div>

<% @products.each do |product| %>
<div>
   <h4>
    Title: <a href="<%=product_path(product)%>"> <%= product.title %> </a><br>
    </h4>
  <%= image_tag(product.image_url) %>
  Price: <%= number_to_currency(product.price, unit: "$", separator: ".", precision:2) %><br>
  <br>
    
    <% if admin?  %>
      <h5 class="admin-only">
        <%= link_to 'Show', product_path(product), :class => "crud-link" %>
        <%= link_to 'Edit', edit_product_path(product), :class => "crud-link" %>
      </h5>
    <% end %>

<% end %>

</div>
